{
  "name": "anime-sync-manager",
  "version": "1.0.0",
  "description": "Project to help me organize my anime from one folder to another",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "cp -r .env package.json *.yaml ./dist/",
    "dev": "NODE_ENV=development node --loader ts-node/esm src/index.ts",
    "format": "prettier --write .",
    "pack": "npm run clean && tsc && npm run copy-files",
    "start": "NODE_ENV=production node src/index.js",
    "test": "vitest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oforfamar/anime-sync-manager.git"
  },
  "keywords": [
    "anime",
    "organizer"
  ],
  "author": "Tudor Roman",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/oforfamar/anime-sync-manager/issues"
  },
  "homepage": "https://github.com/oforfamar/anime-sync-manager#readme",
  "dependencies": {
    "dotenv": "^16.4.5",
    "js-yaml": "^4.1.0",
    "pino": "^9.3.0",
    "pino-pretty": "^11.2.1",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.10",
    "@vitest/coverage-v8": "^2.0.3",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-config-love": "^53.0.0",
    "lefthook": "^1.7.12",
    "prettier": "^3.3.2",
    "rimraf": "^6.0.1",
    "ts-prune": "^0.10.3",
    "vitest": "^2.0.3"
  },
  "volta": {
    "node": "20.12.2",
    "npm": "10.8.0"
  }
}
